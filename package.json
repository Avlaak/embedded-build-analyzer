{
  "name": "embedded-build-analyzer",
  "displayName": "Embedded Build Analyzer",
  "description": "Embedded Build Analyzer for VSCode - Fork of niwciu/stm32-build-analyzer with additional features...",
  "version": "1.1.3",
  "publisher": "embeddteam",
  "license": "MIT",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/avlaak/embedded-build-analyzer.git"
  },
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "icon": {
      "light": "images/icon.png",
      "dark": "images/icon.png"
    },
    "commands": [
      {
        "command": "EmbeddedBuildAnalyzer.openTab",
        "title": "Embedded Build Analyzer"
      },
      {
        "command": "EmbeddedBuildAnalyzer.refresh",
        "title": "Embedded Build Analyzer Refresh Paths"
      }
    ],
    "configuration": {
      "title": "Embedded Build Analyzer",
      "properties": {
        "EmbeddedBuildAnalyzer.mapFilePath": {
          "type": "string",
          "default": "",
          "description": "Absolute path to the .map file (overrides automatic search)"
        },
        "EmbeddedBuildAnalyzer.elfFilePath": {
          "type": "string",
          "default": "",
          "description": "Absolute path to the .elf file (overrides automatic search)"
        },
        "EmbeddedBuildAnalyzer.toolchainPath": {
          "type": "string",
          "default": "",
          "description": "Absolute path to the ARM GNU Embedded toolchain binaries (directory containing arm-none-eabi-objdump, arm-none-eabi-nm, etc.). If set, the extension will use these tools instead of relying solely on PATH."
        },
        "EmbeddedBuildAnalyzer.debug": {
          "type": "boolean",
          "default": false,
          "description": "Enable verbose logging for debugging purposes."
        }
      }
    },
    "viewsContainers": {
      "panel": [
        {
          "id": "embeddedBuildAnalyzerPanel",
          "title": "Embedded Build Analyzer",
          "icon": "$(output)"
        }
      ]
    },
    "views": {
      "embeddedBuildAnalyzerPanel": [
        {
          "id": "embeddedBuildAnalyzer",
          "name": "Embedded Build Analyzer",
          "type": "webview",
          "icon": "$(output)"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.16.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.7.2",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "test": "^3.3.0"
  }
}
